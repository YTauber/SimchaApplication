@using SimchaApplication.Models
@using SimchaData
@model HistoryViewModel

@{
    ViewBag.Title = "History";
}

<h2 style="text-align: center">History for @Model.Name</h2>
<h3 style="text-align: center">Current Balance: @Model.Balance.ToString("C")</h3>
<br />
<table style="text-align: center" class="table table-striped table-bordered table-hover">
    <tr>
        <th style="text-align: center">Action</th>
        <th style="text-align: center">Date</th>
        <th style="text-align: center">Amount</th>
    </tr>

    @foreach (History h in Model.Histories)
    {
        <tr>
            
            <td>@h.Action</td>
            <td>@h.Date.ToLongDateString()</td>
            <td>@h.Amount.ToString("C")</td>
         </tr>
    }
</table>